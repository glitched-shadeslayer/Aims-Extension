{
    "manifest_version": 2,

    "name": "IITH Academic Planner",
    "description": "This extension will be an academic planner exclusively for IITH students",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"]
    },
    //"permissions": ["tabs", "*://aims.iith.ac.in/aims/*"],
    "content_scripts": [{
        "matches": ["*://aims.iith.ac.in/aims/*"],
        "js": ["content.js"]
    }],
    /*"page_action": {
        "default_icon": "icon.png"
    },*/
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "AIMS"
    }

}